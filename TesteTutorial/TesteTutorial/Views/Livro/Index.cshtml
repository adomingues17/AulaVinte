@model IEnumerable<TesteTutorial.Models.Livro>

@{
    ViewData["Title"] = "Lista de Livros";
}

<h1>@ViewData["Title"]</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Criar novo livro</a>
    </p>
}

<table border="1" cellpadding="5" cellspacing="0">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Preco)</th>
            <th>@Html.DisplayNameFor(Model => Model.Editora)</th>
            @if (User.IsInRole("Admin"))
            {
                <th>Ações</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Preco)</td>
                <td>@Html.DisplayFor(modelItem => item.Editora)</td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdLivro">Editar</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdLivro">Deletar</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>


