@model Produto

<h2>Deletar Produto</h2>

<form asp-action="Delete" method="post">
    <input asp-for="Id" disabled />
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" disabled />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Preco"></label>
        <input asp-for="Preco" class="form-control" disabled />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tipo"></label>
        <input asp-for="Tipo" class="form-control" disabled />
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Deletar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>

</form>
